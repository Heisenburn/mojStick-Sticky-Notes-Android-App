<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@color/black"
            android:gravity="start|top"

            android:hint="Click here to edit text"

            android:inputType="textMultiLine"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="305dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_save_button"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="16dp"
                android:onClick="saveButton"
                app:srcCompat="@drawable/ic_content_save" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_quit_button"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="16dp"
                android:onClick="quitButton"
                app:srcCompat="@drawable/ic_close_thick" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_settings_button"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:onClick="startSettings"
                app:srcCompat="@drawable/ic_cog_transfer" />


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>

